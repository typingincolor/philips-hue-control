{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress", "json"],
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vitest.config.js"
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/utils/**/*.js",
    "src/hooks/**/*.js",
    "src/components/**/*.jsx",
    "!src/**/*.test.{js,jsx}",
    "!src/test/**/*",
    "!src/services/mockData.js"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "ignoreStatic": true,
  "timeoutMS": 60000
}
